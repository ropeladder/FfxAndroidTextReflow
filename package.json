{
  "name": "android-text-reflow",
    "title": "AndroidTextReflow",
    "id": "android-text-reflow@rgh36167",
    "description": "Allow click events to reflow text to fit screen width",
    "author": "Richard Z",
    "permissions": {"private-browsing": true},
    "license": "GPL 3.0",
    "version": "2.0.0",
    "main": "lib/main.js",
    "preferences": [
        {	
            "type": "integer",
            "name": "margin",
            "value": 4,
            "title": "text margin left&right" 
     	},
        {
            "type": "bool",
            "name": "wholeColumn",
            "value": true,
            "title": "try to reflow all text in the same column bellow point" 
     	 },
	{
            "type": "bool",
            "name": "dclick",
            "value": true,
            "title": "add reflow on doubleclick" 
	},
	{
            "type": "bool",
            "name": "rdclch",
            "value": true,
            "title": "disable default doubleclick action" 
	},
	{
            "type": "bool",
            "name": "rcldef",
            "value": false,
            "title": "CAUTION : disable default single-click action" 
	},
	
        {
            "type": "bool",
            "name": "debugd",
            "value": false,
            "title": "Debugging output to dump()" 
     	 },
	 {
            "type": "bool",
            "name": "debugc",
            "value": false,
            "title": "Debugging output to console.log()" 
     	 }
	]	
}

